<Window x:Class="MCLauncher.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCLauncher"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        Title="Cleanup for Microsoft Store install">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Content="Cleaning up system for installing Minecraft from Microsoft Store..." Grid.Row="0" Grid.Column="0" Padding="0,0,0,5" />
        <ProgressBar Name="progressBar" Grid.Row="1" Grid.Column="0" Height="20" Grid.ColumnSpan="2" IsIndeterminate="True"/>
    </Grid>
</Window>
